{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable",
      "cargo": {
        "args": ["build", "--bin=hydrogen", "--package=hydrogen"],
        "filter": {
          "name": "hydrogen",
          "kind": "bin"
        }
      },
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_LOG": "hydrogen=debug"
      }
    }
  ]
}
