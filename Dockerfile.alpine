FROM rust:1.81.0-alpine3.20 AS builder
RUN apk -U upgrade
RUN apk add --no-cache musl-dev
WORKDIR /app
COPY src/ src/
COPY Cargo.toml Cargo.toml
COPY Cargo.lock Cargo.lock
RUN cargo build -r

FROM alpine:3.20.0
RUN apk -U upgrade
WORKDIR /app
COPY --from=builder /app/target/release/hydrogen hydrogen
ENV RUST_LOG=hydrogen=error
CMD ["/app/hydrogen"]